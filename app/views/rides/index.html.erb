<h1>Listing rides</h1>

<table>
  <thead>
    <tr>
      <th>To</th>
      <th>From</th>
      <th>Departure time</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.to %></td>
        <td><%= ride.from %></td>
        <td><%= ride.departure_time %></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

